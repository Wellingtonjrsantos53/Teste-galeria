{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "."  /* MUDANÇA CRÍTICA: Diz ao Vercel que a saída é a raiz */
      }
    },
    { 
      "src": "create_payment.js", 
      "use": "@vercel/node",
      "config": {
        "excludeFiles": ["*.html"] 
      }
    }
  ],
  "routes": [
    /* ... (Rotas permanecem as mesmas) ... */
    {
      "src": "/create_payment",
      "methods": [
        "POST"
      ],
      "dest": "/create_payment.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/compra.html",
      "dest": "/compra.html"
    },
    {
      "src": "/agradecimento.html",
      "dest": "/agradecimento.html"
    },
    {
      "src": "/Painel ultima versao.html",
      "dest": "/Painel ultima versao.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1" 
    }
  ]
}